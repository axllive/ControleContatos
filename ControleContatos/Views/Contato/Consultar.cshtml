@model ContatoModel
@{
    ViewData["Title"] = "Alterar";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
<link rel="stylesheet" href="~/css/StyleSheet.css" />
<div class="d-grid gap-2 d-md-flex justify-content-md-start">
    <a class="btn btn-secondary" role="button" asp-controller="Contato" asp-action="Adicionar" btn-secondary">Adicionar Contato</a>
</div>

<div class="text-center">
    <h1 class="display-4">Lista de Contatos</h1>
        <table class="table" id="tableContatos" >
            <thead>
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">E-mail</th>
                    <th scope="col">CPF</th>
                </tr>
            </thead>
            <tbody>
            @if (Model != null)
            {
            <tr>
                <td>@Model.nome</td>
                <td>@Model.email</td>
                <td>@Model.cpf</td>
                    <td>
                    <div class="btn-group" Id="@Model.cpf" role="group" aria-label="Basic outlined example">
                        <a class="btn btn-outline-primary" role="button" asp-route-cpf="@Model.cpf"
                                asp-action="Alterar" asp-controller="Contato" class="btn btn-outline-danger">Alterar</a>
                        <a class="btn btn btn-outline-danger" role="button" asp-route-cpf="@Model.cpf"
                        asp-controller="Contato" asp-action="Excluir" class="btn btn-outline-danger">Excluir</a>
                    </div>
                </td>
            </tr>
            }
            </tbody>
        </table>
</div>
