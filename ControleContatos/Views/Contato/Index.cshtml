@model List<ContatoModel>
@{
    ViewData["Title"] = "Lista de Contatos";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
<link rel="stylesheet" href="~/css/StyleSheet.css" />

<div class="d-grid gap-2 d-md-flex justify-content-md-start">
    <a class="btn btn-secondary" role="button" asp-controller="Contato" asp-action="Adicionar" btn-secondary">Adicionar Contato</a>
</div>




<div class="input-group  d-grid gap-2 d-md-flex justify-content-md-center">
    <h1 class="display-4">Lista de Contatos</h1>
</div>
<table class="table" id="table-contatos">
    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col">Nome</th>
            <th scope="col">E-mail</th>
            <th scope="col">CPF</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (ContatoModel contato in Model)
            {
            <tr>
                <th scope="col"></th>
                <td>@contato.nome</td>
                <td>@contato.email</td>
                <td>@contato.cpf</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic outlined example">
                        <a class="btn btn-outline-primary" role="button" asp-route-cpf="@contato.cpf"
                    asp-action="Alterar" asp-controller="Contato" class="btn btn-outline-danger">Alterar</a>
                        <a class="btn btn btn-outline-danger" role="button" asp-route-cpf="@contato.cpf"
                    asp-controller="Contato" asp-action="Excluir" class="btn btn-outline-danger">Excluir</a>
                    </div>
                </td>
            </tr>
            }
        }
    </tbody>
</table>
<script>
List < ContatoModel > n = new ContatoModel();

Window.onload = functionM{
        
        foreach(ContatoModel contato in Model){
            n.add(contato)
        }
}
</script>
